def bilangan_prima(angka):
    if angka > 1:
        prima(angka)
    else:
        print(angka, "merupakan bilangan prima")
def prima(angka):
    for x in range(2,angka):
             if (angka % x) == 0:
                 print(angka,"bukan merupakan bilangan prima")
                 print("karena", x ,"dikalikan",angka// x ,"hasilnya adalah",angka)
                 break

    else:
        print(angka,"merupakan bilangan prima")
    
a = 1
while a == 1 :
    angka = int(input("input bilangan = "))
    bilangan_prima(angka)
